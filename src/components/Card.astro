---
export interface Props {

items: Array<{
	title: string,
	link: string
}>;
}

const { items } = Astro.props as Props;
---

<div class="cards">
	{items.map((item) => (
	 <div class="card">
		<div class="img"></div>
		<div class="text">{items.title}</div>
	</div>
	))}
</div>

<style lang="scss">
	.cards{
		display: flex;
		width: calc(100vw - 20px);
		margin-left: 10px;
		flex-wrap: wrap;
		justify-content: center;
		.card{
			background-color: rgb(150, 149, 148);
			margin: 5px;
			border-radius: 10px;
			padding: 10px;
			width: 300px;
			height: 400px;
			&:hover{
				background-color: green;
			}
		}
	}
</style>